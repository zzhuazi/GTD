<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_add_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="材料名称"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:id="@+id/tv_add_task_start_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:tag="null"
                android:text="开始日期" />

            <TextView
                android:id="@+id/tv_add_task_center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_add_task_start_time"
                android:gravity="center_vertical"
                android:text=" || " />

            <TextView
                android:id="@+id/tv_add_task_end_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_add_task_center"
                android:gravity="center_vertical"
                android:tag="null"
                android:text="结束日期" />

            <ImageView
                android:id="@+id/iv_add_task_priority"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_priority_high_black_24dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_add_task_introduce"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="start"
            android:hint="请输入介绍..." />

        <Button
            android:id="@+id/bt_add_task_add_sonTask"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#2EBD61"
            android:padding="5dp"
            android:text="添加事务"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:id="@+id/rv_add_task_sonTasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>